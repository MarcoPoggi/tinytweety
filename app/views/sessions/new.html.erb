<% provide(:title, "Log in")%>
<div class="sign-container">
  <h1>Log in</h1>
  <p>Log in to start using tinytweety</p>
  <div class="sign-container-form">
    <%= form_for :session, url:login_path, html: {class:"sign-form"} do |f|%>
      <%= f.label :email %>
      <%= f.email_field :email, class:"sign-input"%>
      <%= f.label :password %>
      <%= f.password_field :password, class:"sign-input" %>
      <%= f.label :remember_me do%>
        <%= f.check_box :remember_me%>
        <span>Remember password</span>
      <% end %>
      <%= f.submit "Log in", class: "btn btn-primary"%>
    <% end %>
    <div>
    </div>
    <span>You don't have an account? <%= link_to "Sign up", signup_path%> now!</span>
    <span>Forgot your password? <%= link_to "Recover password", new_password_reset_path%></span>
  </div>
</div>

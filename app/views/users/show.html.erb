<%provide(:title,@user.name)%>
<div class="profile-dashboard">
  <section class="profile-information">
    <%= gravatar_for @user%>
    <h3><%= @user.name%></h3>
  </section>
  <section class="profile-publications">
    <% flash.each do |msg_type, message|%>
      <div class="alert alert-<%= msg_type%>">
        <%= message %>
      </div>
    <% end %>
  </section>
</div>

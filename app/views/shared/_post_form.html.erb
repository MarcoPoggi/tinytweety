<%= form_for(@post, html:{class:"post-form", multipart:true} ) do |f| %>
  <div class="avatar">
    <%= link_to gravatar_for(current_user, size:50), current_user %>
  </div>
  <div class="form-area">
    <div class="field">
      <%= f.text_area :content, placeholder: "Tell us something..." %>
    </div>
    <span class="sign-error"><%= @post.errors.full_messages[0] %> </span>
    <div class="form-actions">
      <%= f.label :image, class:"label-upload-container" do%>
        <%= f.file_field :image, accept:'image/png, image/gif, image/jpeg, image/jpg'%>
        <div class="file-upload-btn">üñºÔ∏è</div>
      <%end%>
      <%= f.submit "Post", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
